@model IEnumerable<SeeThisMovieQuestionMark.Models.MovieViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="background-color: lightgoldenrodyellow">
    <h1 class="display-4">Should you see this movie?</h1>
    <p class="lead">Many people wonder if they should actually go see a movie or not...</p>
        <hr class="my-4">
        <p>Enter in your info below!</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            @using (Html.BeginForm())
            {
            <h2>How picky are you?</h2>
            <input id="slider" type="range" min="0" max="8" step="2" onchange="newvalue()" />
            }

        </div>
        
    </div>



</div>

